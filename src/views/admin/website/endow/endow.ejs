<% extend("../../../admin.ejs") %>
<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/admin">UTDESIGN</a></li>
                        <li class="breadcrumb-item active"><%= title %></li>
                    </ol>
                </div>
                <h4 class="page-title"><%= title %></h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xl-12">
            <div class="card-box">
                <h5> <strong> Danh sách <%= title %></strong></h5>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th> STT </th>
                                <th> Hình ảnh </th>
                                <th> Tiêu đề </th>
                                <th> Mô tả </th>
                                <th> hành động </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% endows.forEach(function(endow, index){ %>
                            <tr>
                                <th scope="row"><%= index %></th>
                                <% if(endow.image != '' && endow.image != null){ %>
                                <td class="product-image">
                                    <img class="sp_img-<%= endow.id%>"
                                        src="/public/uploads/endows/<%= endow.image %>"
                                        alt="<%= endow.title %>">
                                </td>
                                <% } else{ %>
                                <td class="product-image">
                                    <img class="sp_img-<%= endow.id%>"
                                        src="/admin/public/images/example.png" alt="<%= endow.title %>">
                                </td>
                                <% } %>
                                <td class="font-weight-bold">
                                    <p> <%= endow.title %> </p>
                                </td>
                                <td class="font-weight-bold">
                                    <p> <%= endow.description %> </p>
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a href="/admin/endow/edit-endow/<%= endow.id %>"
                                            class="btn hor-grd btn-grd-warning" title="Sửa Ưu đãi">
                                            <i class="icofont icofont-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('.delete-blog-confirm').on('click', function (e) {
        e.preventDefault();
        var url = $(this).attr('data-url');
        $('#delete-blog-link').attr('href', url);
    });
</script>

<%- include("../../modal/blog-delete-modal.ejs") %>