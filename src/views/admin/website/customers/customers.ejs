<% extend("../../../admin.ejs") %>
<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/admin">UTDESIGN</a></li>
                        <li class="breadcrumb-item active"><%= title %></li>
                    </ol>
                </div>
                <h4 class="page-title"><%= title %></h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xl-12">
            <div class="card-box">
                <h5 class="d-inline"> <strong> Danh sách <%= title %></strong></h5>
                <a href="/admin/customer/add-customer" type="button" class="btn btn-teal waves-light waves-effect float-right mb-2"><i class="ion ion-md-add"></i></a>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th> STT </th>
                                <th> Tên KH </th>
                                <th> Nghề Nghiệp </th>
                                <th> Đánh giá </th>
                                <th> hành động </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% customers.forEach(function(customer, index){ %>
                            <tr>
                                <th scope="row"><%= index %></th>
                                <td class="font-weight-bold">
                                    <p><%= customer.customer_name %></p>
                                </td>
                                <td>
                                    <p> <%= customer.customer_career %> </p>
                                </td>
                                <td>
                                    <p> <%= customer.customer_evaluate %> </p>
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a href="/admin/customer/edit-customer/<%= customer.id %>"
                                            class="btn hor-grd btn-grd-warning" title="Sửa lý do">
                                            <i class="icofont icofont-edit"></i>
                                        </a>
                                        <a href="/admin/customer/delete-customer/<%= customer.id %>"
                                            class="btn hor-grd btn-grd-warning" title="Xóa đánh giá">
                                            <i class="icofont icofont-ui-delete" ></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>