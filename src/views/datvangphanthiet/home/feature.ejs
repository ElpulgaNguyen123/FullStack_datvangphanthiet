<section class="space-pb">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="section-title text-center">
          <h2>Bất Động Sản Mới Nhất</h2>
          <p>Nhanh tay chọn bất động sản ngay</p>
        </div>
      </div>
    </div>
    <div class="row">
      <% products.forEach((product) => { %>
      <div class="col-sm-6 col-md-4">
        <div class="property-item">
          <div class="property-image bg-overlay-gradient-04">
            <% if(product.image.length > 0){ %>
            <img class="img-fluid" src="/public/uploads/products/<%=JSON.parse(product.image)[0] %>" alt="">
            <% } else{ %>
            <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            <% } %>
            <div class="property-lable">
              <span class="badge badge-md badge-primary"><%= product.category_name %></span>
              <span class="badge badge-md badge-info"> <%= product.sku %> </span>
            </div>
            <span class="property-trending" title="trending"><i class="fas fa-bolt"></i></span>
          </div>
          <div class="property-details">
            <div class="property-details-inner">
              <h5 class="property-title"><a href="/san-pham/<%= product.slug %>.<%= product.id %>" title="<%= product.name %>"><%= product.name %></a>
              </h5>
              <span class="property-address"><i class="fas fa-map-marker-alt fa-xs"></i><%= product.address %></span>
              <span class="property-agent-date"><i class="far fa-clock fa-md"></i><%= product.create_at %></span>
              <div class="property-price"><%= product.price %><span>vnđ</span> </div>
              <ul class="property-info list-unstyled">
                <li class="flex-fill property-bed"><i class="fa fa-eye" aria-hidden="true"></i><span><%= product.view %></span></li>
                <li class="flex-fill property-bath"><i class="fas fa-map-marker-alt fa-xs"></i><span><%= product.address %></span></li>
                <li class="flex-fill property-m-sqft"><i class="far fa-square"></i><span><%= product.square %></span></li>
              </ul>
            </div>
            <div class="property-btn">
              <a class="property-link" href="/san-pham/<%= product.slug %>.<%= product.id %>" title="<%= product.name %>">Xem chi tiết</a>
            </div>
          </div>
        </div>
      </div>
      <%  }) %>
    </div>
  </div>
</section>
